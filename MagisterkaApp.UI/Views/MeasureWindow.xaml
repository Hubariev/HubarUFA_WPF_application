                    <GridViewColumn Header="Name"
                                            DisplayMemberBinding="{Binding NameOfMeasure}" Width="70"/>
                    <GridViewColumn Header="Operator"
                                            DisplayMemberBinding="{Binding NameOfOperator}" Width="100" />
                    <GridViewColumn Header="HSeptum"
                                            DisplayMemberBinding="{Binding HSeptum}" Width="100" />
                    <GridViewColumn Header="Field strength"
                                            DisplayMemberBinding="{Binding CorrrectedfieldStrength}" Width="90" />
                    <GridViewColumn Header="Number of Points"
                                            DisplayMemberBinding="{Binding NumberOfPoints}" Width="100" />
                    <GridViewColumn Header="Date"
                                            DisplayMemberBinding="{Binding DateOfMeasure}" Width="150" />
                    <GridViewColumn Header="Id"
                                            DisplayMemberBinding="{Binding Id}" Width="110" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
