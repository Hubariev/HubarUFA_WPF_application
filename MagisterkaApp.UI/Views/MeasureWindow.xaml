        <ListView Margin="10,10,0,27" ItemsSource="{Binding Measures}" Grid.Column="1" x:Name="listViewMeasures" 
                  Foreground="#d2d0d0" Background="#141010" SelectedItem="{Binding SelectedMeasure, Mode=TwoWay}">


            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding SelectionChangedMeasureCommand}"
                                           CommandParameter="{Binding ElementName=listViewMeasures,
                        Path=SelectedItem}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <ListView.View>
                <GridView>
                    <!--<GridViewColumn Header="Default" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <RadioButton GroupName="Category" IsChecked="{Binding IsDefault}" Command="{Binding DataContext.DefaultCategoryChangedCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" CommandParameter="{Binding}"/>
                            </DataTemplate>
