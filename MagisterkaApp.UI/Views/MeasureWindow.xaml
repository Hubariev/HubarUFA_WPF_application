        <ListView Margin="10,10,0,27" ItemsSource="{Binding Measures}" Grid.Column="1" x:Name="listViewMeasures" SelectedItem="{Binding SelectedMeasure, Mode=TwoWay}" Style="{StaticResource ListViewMeasureStyle}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <cmd:EventToCommand Command="{Binding CategoryBeenSelected, Mode=OneWay}"
                                                MustToggleIsEnabledValue="True" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Default" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <RadioButton GroupName="Category" IsChecked="{Binding IsDefault}" Command="{Binding DataContext.DefaultCategoryChangedCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Name"
                                            DisplayMemberBinding="{Binding NameOfMeasure}" Width="70"/>
                    <GridViewColumn Header="Operator"
                                            DisplayMemberBinding="{Binding NameOfOperator}" Width="100" />
                    <GridViewColumn Header="HSeptum"
                                            DisplayMemberBinding="{Binding HSeptum}" Width="100" />
                    <GridViewColumn Header="Field strength"
                                            DisplayMemberBinding="{Binding FieldStrength}" Width="90" />
                    <GridViewColumn Header="Number of Points"
                                            DisplayMemberBinding="{Binding NumberOfPoints}" Width="100" />
                    <GridViewColumn Header="Date"
                                            DisplayMemberBinding="{Binding DateOfMeasure}" Width="170" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
